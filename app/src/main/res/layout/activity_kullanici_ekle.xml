<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.KullaniciEkleActivity"
    android:background="@color/background_color">


    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingTop="20sp">

        <EditText
            android:id="@+id/kullanıcı_ekle_block_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blok"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/kullanıcı_ekle_apartment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daire"
            android:textSize="20sp"
            android:paddingLeft="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_1"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/ev_sahibi_isim_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Ev Sahibi İsim Soyisim" />

        <EditText
            android:id="@+id/kiraci_isim_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Kiracı İsim Soyisim" />

    </LinearLayout>

    <Button
        android:id="@+id/kullanıcı_ekle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/button_color"
        android:text="Ekle"
        android:textSize="30sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>